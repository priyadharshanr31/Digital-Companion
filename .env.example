# Digital Companion Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://dc_user:YOUR_SECURE_PASSWORD@localhost:5433/digital_companion
POSTGRES_DB=digital_companion
POSTGRES_USER=dc_user
POSTGRES_PASSWORD=YOUR_SECURE_DB_PASSWORD

# Redis Configuration  
REDIS_URL=redis://localhost:6379

# API Keys (REQUIRED)
GEMINI_API_KEY=your_gemini_api_key_from_google_ai_studio

# pgAdmin Configuration (Optional)
PGADMIN_EMAIL=admin@yourcompany.com
PGADMIN_PASSWORD=YOUR_SECURE_PGADMIN_PASSWORD

# App Configuration
ENVIRONMENT=production
MAX_CONCURRENT_USERS=500
SESSION_STORAGE=redis
SESSION_TIMEOUT=86400

# Security
SECRET_KEY=your_super_secret_key_here_generate_random_string